<nav class="navbar navbar-expand-lg navbar-light bg-light container-navbar">
    <a class="navbar-brand">
        {{navbar.title}}
    </a>
    <button class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarText"
            aria-controls="navbarText"
            aria-expanded="false"
            aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse"
         id="navbarText">
        <ul class="navbar-nav mr-auto">
            {{#each navbar.components}}
                <li class="nav-item active">
                    <a class="nav-link"
                       href="{{href}}?lang={{../locale}}">{{ title }}
                    <span class="sr-only">(current)</span>
                    </a>
                </li>
            {{/each}}
        </ul>
        <span class="navbar-text">
          <ul class="navbar-nav mr-auto">
              {{#each navbar.languages}}
                  <li class="nav-item active">
                    <a class="nav-link"
                       href="{{currentPath}}?lang={{lang}}">
                      {{#if (eq lang ../locale)}}
                          <b>{{title}}</b>
                          <span class="sr-only">(current)</span>
                      {{else}}
                          {{title}}
                      {{/if}}
                      </a>
                </li>
              {{/each}}
          </ul>
        </span>
    </div>
</nav>


<div class="container-home">
    <div class="row justify-content-center">
        <div class='col-6'>
            <div class="form-div-left">
                <div class="form-sub-div-left">
                    <ul>
                        {{#each project}}
                            <li class="mt-4">
                                <p class="h5">{{name}}</p>
                                <p class="h6 mt-2">{{description}}</p>
                                <form action="{{currentPath}}?operation=remove&id={{_id}}&lang={{locale}}" method="post">
                                    <button class="btn btn-sm btn-danger">
                                        {{../projects.remove}}
                                    </button>
                                </form>
                            </li>
                        {{else}}
                            <p class="h4">{{projects.empty}}</p>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class='col-6'>
            <div class="form-div-right">
                <div class="form-sub-div-right">
                    <p class="h3">
                        {{form.titleAdmin}}
                    </p>
                    <form action="{{currentPath}}?operation=create&id={{_id}}&lang={{locale}}" method="post" class="mt-3">
                    <div class="form-group">
                        <label for="input-name">
                            {{form.labels.name}}
                        </label>
                        <input type="text"
                               class="form-control"
                               id="input-name"
                               name="name"
                               aria-describedby="input-name-help"
                               placeholder="..."
                               autofocus
                               required
                               oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Назва проєкту є обов\'язковим полем')">
                        <small id="input-name-help"
                               class="form-text text-muted">
                            {{form.smalls.name}}
                        </small>
                    </div>
                    <div class="form-group">
                        <label for="input-description">
                            {{form.labels.description}}
                        </label>
                        <input type="text"
                               name="description"
                               class="form-control"
                               id="input-description"
                               placeholder="..."
                               required
                               oninput="this.setCustomValidity('')"
                               oninvalid="this.setCustomValidity('Опис проєкту є обов\'язковим полем')">
                    </div>
                    <button type="submit"
                            class="btn btn-primary">
                        {{form.create}}
                    </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
